
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Playout/HomePlayout.cshtml";
}
<link href="~/Content/css/style_form_dang_nhap.css" rel='stylesheet' type='text/css' />
<div style="height:1000px">
    <br />
    <input type="button" value="Đăng nhập" id="btnDangNhap" class="btn btn-primary" />
    @*Tạo div tên popup login*@
    <div id="popup-login">
        <div class="login-form" id="login-form">
            <div style="clear:both;text-align:right;margin-bottom:0">
                <span id="close-form" class="btn btn-danger">X</span>
            </div>
            <h2>ĐĂNG NHẬP</h2>
            <div class="form-info">
                <form>
                    <input class="email TaiKhoan" placeholder="Tên đăng nhập" required="" type="text" id="tendangnhap">
                    <input class="password MatKhau" placeholder="Mật khẩu" required="" type="password" id="matkhau">
                    <p><a href="#">Quên mật khẩu?</a></p>
                    <ul class="login-buttons">
                        <li><input value="Đăng nhập" type="submit" id="btnLogin"/></li>
                        <li><a href="#" class="hvr-sweep-to-left" id="btnDangki" >Đăng kí</a></li>
                    </ul>
                </form>
            </div>
        </div>
    </div>
</div>


<style>
       #btnDangNhap {
            float: left;
        }

        .content {
            height: 1000px;
        }

        #close-form {
            color: white;
        }
      #login-form {

          background:#3a3a46;
          height:450px;
          width:450px;
      }
    @*css cho phan popup login*@
        #popup-login{
            position:fixed;
            top:0;
            left:0;
            width:100%;
            height:100%;
            background-color:rgba(0,0,0,.5);
            z-index:99;
            display:none
        }
       #btnLogin{
           width:80%;
           height:80%;
           text-align:left;

       }
      #btnDangki {
          width: 80%;
          height: 80%;
      }
      #tendangnhap{
          background-color:#ffffff;
      }
     #matkhau {
         background-color:#ffffff;
     }


</style>

@*Su dung jquery hiển thị popup login*@
<script type="text/javascript">
    // hien thi popup login
    $("#btnDangNhap").click(function ()
    {
        $("#popup-login").slideDown();
    });
    // an di popup login
    $("#close-form").click(AnForm);

    function AnForm() {
        $("#popup-login").hide();
    }
    $("#btnLogin").click(function () {
        var TaiKhoan = $(".TaiKhoan").val();
        var MatKhau = $(".MatKhau").val();
        //alert("Tài khoản" + TaiKhoan + "\n Mật khẩu:" + MatKhau)
        if (TaiKhoan == "") {
            alert("Vui lòng nhập tài khoản");
            return;
        }
    }
       
    );
</script>


