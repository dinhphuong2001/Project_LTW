
@using DealineMVC.Models
@model ThanhVien
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Playout/ProductLayout.cshtml";
}
<div class="DangKy">
    <div class="register">
        <h1>Đăng ký thành viên</h1>
        @using (Html.BeginForm())
        {
            <div class="col-md-4 register-top-grid">
                <h3>Thông tin cá nhân</h3>
                <div>
                    <span>Tài khoản</span>
                    @Html.TextBox("TaiKhoan", null, new { @class = "SDT", name = "txtTaiKhoann", required = "required" })
                </div>
                <div>
                    <span>Họ Tên</span>
                    @Html.TextBox("HoTen", null, new { @class = "SDT", required = "required" })
                </div>
                <div>
                    <span>Địa Chỉ</span>
                    @Html.TextBox("DiaChi", null, new { @class = "SDT",  required = "required" })
                </div>
                <div>
                    <span>Email</span>
                    @Html.TextBox("Email", null, new { @class = "Email", type = "email", required = "required" })
                </div>
            </div>
            <div class="col-md-5 register-bottom-grid register-top-grid">
                <h3>Thông tin đăng nhập</h3>
                <div>
                    <span>Mật Khẩu</span>
                    @Html.Password("MatKhau", null, new { @class = "SDT", required = "required" })
                </div>
                <div>
                    <span>Nhập lại mật khẩu</span>
                    @Html.Password("MatKhau", null, new { @class = "SDT", required = "required" })
                </div>
                <div>
                    <span>Điện Thoại</span>
                    @Html.TextBox("SoDienThoai", null, new { @class = "SDT", required = "required" })
                </div>
                <br />
                <br />
                <br />
                <input value="Xác Nhận" type="submit" onclick="alert('Bạn đã đăng ký thành công!')">
            </div>
            <div class="clearfix"></div>
        }
    </div>

</div>
<style>
    .SDT {
        border: 1px solid #cccccc;
        border-radius: 10px 10px 10px 10px;
    }

    .Email {
        width: 100%;
        height: 52px;
        border: 1px solid #cccccc;
        border: 1px solid #A09F9F;
        border-radius: 10px 10px 10px 10px;
    }
</style>


